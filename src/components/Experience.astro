---
import type { defineCollection } from 'astro:content';
import ExperienceItem from './ExperienceItem.astro';

const EXPERIENCE = [
  {
    date: 'Marzo 2023 - Marzo 2024',
    title: 'Full-Stack Developer - TGO',
    desc: 'Mantenimiento de la aplicación interna de una pequeña empresa, así como el desarrollo de nuevas funcionalidades. Desarrollo de APIs. Gestión de bases de datos.',
  },
];
---

<ol class='relative border-s border-gray-200 dark:border-gray-700 ml-3'>
  {
    EXPERIENCE.map((experience) => (
      <li class='mb-10 ms-4'>
        <ExperienceItem {...experience} />
      </li>
    ))
  }
</ol>
