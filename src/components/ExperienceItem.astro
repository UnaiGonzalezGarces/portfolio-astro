---
import LinkButton from './LinkButton.astro';

interface Props {
  title: string;
  desc: string;
  link?: string;
  date: string;
  company: string;
}
const { title, desc, date, link, company } = Astro.props;
---

<div class='absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700'></div>
<time class='mb-1 text-sm font-normal leading-none text-sky-200/80'>{date}</time>
<h3 class='text-lg font-semibold text-yellow-200 mt-2'>{title}</h3>
{company && <h4 class='text-md font-semibold text-yellow-200/90 mt-1'>{company}</h4>}
<p class='mb-4 text-base mt-1 font-normal text-gray-500 dark:text-gray-200 text-pretty'>
  {desc}
</p>
